{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "outDir": "./dist",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "lib": [
            "ES2022",
            "DOM"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "index.ts",
        "client.ts",
    ],
    "exclude": [
        "node_modules"
    ],
    "outDir": "./dist",
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}